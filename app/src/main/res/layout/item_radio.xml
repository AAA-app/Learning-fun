<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusableInTouchMode="true"
    android:background="@drawable/gradient_list"
    android:padding="5dp"
    android:layout_marginBottom="2dp"
    >

    <ImageView
        android:id="@+id/img_radio"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"

        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:paddingRight="5dp"
        android:scaleType="fitCenter"
        android:contentDescription="TODO" />

    <TextView
        android:id="@+id/description_radio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/img_radio"
        android:layout_toRightOf="@+id/img_radio"
        android:background="@drawable/button_black_background"
        android:fontFamily="@font/aldrich"
        android:gravity="center"
        android:text="Decription"
        android:textColor="@color/blackBlue"
        android:textSize="16sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnPlay_radio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:textColor="@color/blackBlue"
        android:background="@drawable/button_black_background"
        android:layout_marginTop="113dp"
        android:layout_marginEnd="21dp"
        android:layout_marginRight="11dp"
        android:text="Play" />
</RelativeLayout>