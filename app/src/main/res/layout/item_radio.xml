<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusableInTouchMode="true"
    android:background="#090646"
    android:padding="5dp"
    android:layout_marginBottom="2dp"
    >

    <ImageView
        android:id="@+id/img_radio"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:paddingRight="5dp"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/description_radio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnPlay_radio"
        android:layout_alignBottom="@+id/img_radio"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/img_radio"
        android:paddingTop="10dp"
        android:textColor="@color/whatColor"
        android:text="Cherry"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnPlay_radio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@color/colorPrimary"
        android:layout_marginTop="113dp"
        android:layout_marginEnd="21dp"
        android:layout_marginRight="11dp"
        android:text="Play" />
</RelativeLayout>